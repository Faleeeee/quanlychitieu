<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vi"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"></Button>

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Thêm giao dịch"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </LinearLayout>


    <!-- Amount -->
    <EditText
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="left"
        android:hint="0"
        android:inputType="numberDecimal"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/green"
        android:textSize="24sp" />


    <!-- Nhom -->
    <TextView
        android:id="@+id/textGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="left"
        android:hint="Chọn nhóm"
        android:onClick="btnNhom"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        app:backgroundTint="@null" />

    <!-- Description -->
    <EditText
        android:id="@+id/noteEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:drawableLeft="@drawable/outline_comment_24"
        android:gravity="left"
        android:hint="Thêm ghi chú"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textColorHint="@android:color/darker_gray"
        app:backgroundTint="@null" />

    <!-- Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:drawableLeft="@drawable/baseline_calendar_month_24"
            android:gravity="left"
            android:onClick="btnCalendar"
            android:padding="16dp"
            android:text="Ngày"
            android:textColor="@android:color/white"
            app:backgroundTint="@null" />
    </LinearLayout>


    <!-- Spinner Account -->
    <EditText
        android:id="@+id/etAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableStart="@drawable/baseline_account_balance_wallet_24"
        android:hint="Tài Khoản"
        android:inputType="date"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/white" />

    <!-- Save Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/button_save_wallet"
            android:gravity="center"
            android:text="Lưu"
            android:textColor="@android:color/white"
            app:backgroundTint="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">
        <!-- Custom Keyboard -->
        <GridLayout
            android:id="@+id/customKeyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vi"
            android:columnCount="4">

            <!--Row 1-->
            <Button
                android:id="@+id/btnC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="restartBtn"
                android:text="C"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="divideBtn"
                android:text="÷"
                android:textColor="@color/green"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="multiplyBtn"
                android:text="×"
                android:textColor="@color/green"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="deleteBtn"
                android:padding="18dp"
                android:scaleType="fitCenter"
                android:src="@drawable/delete"
                app:backgroundTint="@null" />
            <!-- Row 1 -->
            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="sevenBtn"
                android:text="7"
                android:textColor="@color/green"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="eightBtn"
                android:text="8"
                android:textColor="@color/green"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="nineBtn"
                android:text="9"
                android:textColor="@color/green"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="subtractBtn"
                android:text="-"
                android:textColor="@color/green"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <!-- Row 2 -->
            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="fourBtn"
                android:text="4"
                android:textColor="@color/green"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="fiveBtn"
                android:text="5"
                android:textColor="@color/green"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="sixBtn"
                android:text="6"
                android:textColor="@color/green"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="addBtn"
                android:text="+"
                android:textColor="@color/green"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <!-- Row 3 -->
            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="oneBtn"
                android:text="1"
                android:textColor="@color/green"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="twoBtn"
                android:text="2"
                android:textColor="@color/green"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="threeBtn"
                android:text="3"
                android:textColor="@color/green"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnEquals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowSpan="2"
                android:layout_rowWeight="2"
                android:layout_columnWeight="1"
                android:background="@drawable/button_equals_calculator"
                android:onClick="equalBtn"
                android:text="="
                android:textColor="@color/white"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <!-- Row 4 -->
            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="zeroBtn"
                android:text="0"
                android:textColor="@color/green"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btn000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="threeZeroBtn"
                android:text="000"
                android:textColor="@color/green"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/custom_button"
                android:onClick="dotBtn"
                android:text="."
                android:textColor="@color/green"
                android:textSize="30sp"
                app:backgroundTint="@null" />


        </GridLayout>
    </LinearLayout>


</LinearLayout>
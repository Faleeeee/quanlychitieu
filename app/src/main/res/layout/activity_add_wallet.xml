<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".addWallet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên ví"
            android:textColor="@color/gray"></TextView>

        <EditText
            android:id="@+id/nameWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên ví"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số dư"
            android:textColor="@color/gray"></TextView>

        <EditText
            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số dư"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/addWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_vi"
            android:text="Tạo ví"
            android:textColor="@color/green"
            android:textStyle="bold"
            app:backgroundTint="@null"></Button>
    </LinearLayout>
</LinearLayout>

